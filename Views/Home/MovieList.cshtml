@{
    ViewData["Title"] = "List";
    ViewBag.Title = "Joel Hilton Movie List";
}

@model IEnumerable<Movie>

<div>
    <h3>Here are all of your movies!</h3>
    <br />
    <br />
    <table class="table-bordered table-dark table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent To</th>
                <th>Notes</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Title</td>
                    <td>@x.Category</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.Notes</td>
                    <td class="text-center">
                        <form asp-action="Edit" method="post">
                            <input type="hidden" name="MovieID" value="@x.MovieID"/>
                            <button class="btn-warning btn btn-group-sm" type="submit">Edit</button>
                        </form>
                    </td>
                    <td class="text-center">
                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="MovieID" value="@x.MovieID" />
                            <button class="btn-danger btn btn-sm" type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>